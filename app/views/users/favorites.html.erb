<%= render 'info' %>
<h2>Favorites</h2>
<% if @user.favorites.empty? %>
    <div class="list-group-item">
      まだお気に入りされた投稿はありません。
    </div>
<% end %>
<% @user.favorites.map { |f| f.post }.each do |post| %>
    <h4 class="user">
      <span class="user-name">
        <%= link_to post.user.email, user_path(post.user) %>
      </span>
    </h4>
    <div class="post-body">
      <%= post.body %>
    </div>
<% end %>
