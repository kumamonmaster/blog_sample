<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<%= link_to 'New Post', new_post_path, class: "btn btn-default" %>
<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Body</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <% if post.image? %>
          <td><%= image_tag post.image.url %></td>
        <% else %>
          <td><%= image_tag 'noimage.gif' %></td>
        <% end %>
        <td><%= link_to post.title, post_path(post) %></td>
        <td><%= post.body %></td>
        <td><%= render 'posts/tag_list', tag_list: post.interest_list %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @posts %>
